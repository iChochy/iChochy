{{ printf "<?xml version=\"1.0\" encoding=\"UTF-8\" ?>" | safeHTML }}
<sitemapindex>
  {{- range .Site.RegularPages}}
  <sitemap>
    <loc>{{ .Permalink }}</loc>
    {{- if not .Lastmod.IsZero }}
    <lastmod>{{ safeHTML ( .Lastmod.Format "2006-01-02T15:04:05-07:00" ) }}</lastmod>
    {{- end }}
  </sitemap>
  {{- end }}
</sitemapindex>